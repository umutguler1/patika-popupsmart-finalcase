
{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true // for eslint not to throw error when using test() or expect()
    },
    "extends": [
        "plugin:react/recommended",
        "standard-with-typescript",
        "plugin:@next/next/recommended",
        "prettier"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "react/jsx-props-no-spreading": "off"
    }
}
